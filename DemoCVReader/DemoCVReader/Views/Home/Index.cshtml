@using DemoCVReader.Models
@model CustomerModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm("UploadCV", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
      
    <p>
        @Html.ValidationSummary()
    </p>
    
    
    
  
        <div class="title">
            <h2 class="title">Upload your CV Now</h2>
        </div>

        <div class="col-lg-12 col-sm-6">
            <div class="form-group bmd-form-group">
                <label for="Username" class="bmd-label-floating">Username</label>
                @Html.TextBoxFor(m=>m.Username, new {@class="form-control" ,@required="required"})
                <span class="bmd-help">Please provide a valid Username.Must be 5 characters long.</span>
            </div>
        </div>


        <div class="col-lg-12 col-sm-6">
            <div class="form-group bmd-form-group">
                <label for="Password" class="bmd-label-floating">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required" })
                <span class="bmd-help">Make Sure your password is strong</span>
            </div>
        </div>
    
            <div class="col-lg-12 col-sm-6">
                <div class="form-group bmd-form-group">
                    <label for="Email" class="bmd-label-floating">Email</label>
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control" })
                    <span class="bmd-help">Please provide a valid Username. Must be 5 characters long.</span>
                </div>
            </div>
        <center>
            <div class="col-lg-8">
                <span class="btn btn-rose btn-round btn-file">
                    <span class="fileinput-new">Upload CV</span>
                    <span class="fileinput-exists">*.Pdf Only</span>
                    <input type="file" name="cvfile">
                    <div class="ripple-container"></div>
                </span>

            </div>

            <div>
                <input type="submit" class="btn btn-primary btn-lg" value="Submit" />
            </div>

        </center>
  
}
